{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "eslint-plugin-react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "React" }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "react/jsx-uses-vars": 1,
    "comma-dangle": ["error", "always-multiline"],
    "global-require": 0
  }
}
